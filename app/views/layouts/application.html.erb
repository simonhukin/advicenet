<!DOCTYPE html>
<html>
<head>
  <title>Advicenet</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="header">
    <h1>AdviceNet.</h1>
  </div>
  <div class="main">
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= render "sessions/sign_in_out" %>
    <%= yield %>
  </div>
  <div class="footer">
    <%= debug(params) if Rails.env.development? %>
  </div>

</body>
</html>
